<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Require Configuration Editor"
            extensions="require"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="org.eclipse.require.ui.editors.config.RequireConfigurationEditor"
            id="org.eclipse.require.ui.editors.config.RequireConfigurationEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.eclipse.require.ui.views"
            name="Require">
      </category>
      <view
            allowMultiple="false"
            category="org.eclipse.require.ui.views"
            class="org.eclipse.require.ui.views.RequireConfigurationView"
            icon="icons/sample.gif"
            id="org.eclipse.require.ui.cfgs"
            name="Require configurations"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.eclipse.require.ui.require"
            nameFilter="*.require"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               icon="icons/sample.gif"
               id="org.eclipse.require.ui.menu1"
               label="Require"
               path="require">
         </menu>
         <action
               class="org.eclipse.require.ui.actions.ApplyRequire"
               icon="icons/sample.gif"
               id="org.eclipse.require.ui.applyConfig"
               label="Apply Configuration"
               menubarPath="require">
         </action>
      </objectContribution>
   </extension>

</plugin>
